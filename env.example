# Spines 2.0 Configuration
# Copy this file to .env and customize for your setup

# Server Configuration
SPINES_HOST=0.0.0.0
SPINES_PORT=8888
FLASK_ENV=production
FLASK_DEBUG=false

# Paths
SPINES_BOOKS_PATH=./books
SPINES_DATA_PATH=./data
SPINES_TEMP_PATH=./temp
SPINES_LOGS_PATH=./logs

# Access Control
SPINES_ACCESS_MODE=local
SPINES_PUBLIC_READ_ONLY=true
SPINES_ADMIN_USERS=hal,whisper

# Network Configuration (for hybrid mode)
SPINES_TAILSCALE_PORT=8888
SPINES_PUBLIC_PORT=8889
SPINES_DOMAIN=localhost

# Logging
SPINES_LOG_LEVEL=INFO

# Migration Settings
SPINES_MIGRATION_MODE=false
SPINES_V1_BOOKS_PATH=../spines/books
SPINES_V1_DATA_PATH=../spines/data

# Optional: Cloudflare (for public deployment)
CLOUDFLARE_API_KEY=your_api_key_here
CLOUDFLARE_ZONE=yourdomain.com

# Optional: Tailscale
TAILSCALE_AUTH_KEY=your_tailscale_key 